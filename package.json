{
  "name": "mcp-desktop",
  "version": "1.0.0",
  "description": "Desktop application for managing local LLMs and MCP servers",
  "engines": {
    "node": ">=20.9.0"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run next:dev\" \"npm run electron:dev\" \"npm run electron:start\"",
    "build": "npm run next:build && npm run electron:build",
    "next:dev": "next dev",
    "next:build": "next build",
    "electron:dev": "tsc -w --project electron.tsconfig.json",
    "electron:build": "tsc --project electron.tsconfig.json",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "lint": "next lint && eslint . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "cross-env NODE_ENV=test jest --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "cross-env NODE_ENV=test jest tests/database.test.ts --verbose",
    "test:db:watch": "NODE_ENV=test ts-node-dev -P ./tests/tsconfig.json tests/database.test.ts",
    "test:all": "npm run test && npm run test:db",
    "package": "npm run build && electron-builder build --mac --win --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.26.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.6",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^6.7.0",
    "next": "^13.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.1"
  }
}
