{
  "name": "mcp-desktop-app",
  "version": "0.1.0",
  "private": true,
  "author": "Your Name",
  "description": "MCP Desktop Application",
  "main": "dist/electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3002",
    "dev:electron": "tsc -p electron/tsconfig.json && wait-on tcp:3002 && npx cross-env NODE_ENV=development npx electron .",
    "build": "next build && npm run build:electron",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start": "next start -p 3002",
    "lint": "next lint",
    "electron-dev": "dotenv -e .env tsc -p electron/tsconfig.json && npx cross-env NODE_ENV=development PORT=3002 API_PORT=3100 npx electron .",
    "electron-build": "next build && tsc -p electron/tsconfig.json && electron-builder",
    "electron-start": "npx electron .",
    "kill-ports": "kill-port 3002 || true",
    "watch:electron": "tsc -p electron/tsconfig.json -w",
    "clean": "rm -rf .next out dist",
    "predev-all": "npm run clean && npm run kill-ports && npm run build:electron",
    "dev-next": "next dev -p 3002",
    "dev-electron": "dotenv -e .env concurrently --kill-others \"npm run watch:electron\" \"wait-on -t 60000 -v -d 5000 http-get://localhost:3002 && npx cross-env NODE_ENV=development HOME=$HOME PORT=3002 API_PORT=3100 npx electron .\"",
    "dev-all": "concurrently --kill-others \"npm run dev-next\" \"sleep 5 && npm run dev-electron\"",
    "postdev-all": "npm run kill-ports",
    "build:all": "dotenv -e .env npm run clean && npm run build && npm run electron-build",
    "prisma:studio": "dotenv -e .env prisma studio",
    "prisma:migrate": "dotenv -e .env prisma migrate dev",
    "prisma:generate": "dotenv -e .env prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@types/cors": "^2.8.18",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron": "^28.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "next": "^14.0.4",
    "prisma": "^6.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.47",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "kill-port": "^2.0.1",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3"
  }
}
