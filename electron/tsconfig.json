{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "../dist/electron",
    "rootDir": "..",
    "noEmit": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/lib/hooks/*"],
      "@config/*": ["src/config/*"]
    },
    "allowImportingTsExtensions": false
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "tests/**/*",
    "../tests/**/*"
  ]
} 